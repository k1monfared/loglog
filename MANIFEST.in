# Include data files and documentation
include README.md
include LICENSE
include *.py
include *.log

# Documentation
recursive-include docs *.md
recursive-include demo *
recursive-include tests *.txt *.py *.md

# Packaging files
include MANIFEST.in
include setup.py
include requirements.txt

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude .git*
global-exclude __pycache__
global-exclude .DS_Store